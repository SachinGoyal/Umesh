<h1>Listing suppliers</h1>
<%= search_form_for @search, url: search_suppliers_path, method: :post do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
  <div class="field">
    Sort:
    <%= f.sort_fields do |s| %>
      <%= s.sort_select %>
    <% end %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company name</th>
      <th>Address</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Country</th>
      <th>Email</th>
      <th>Telephone no</th>
      <th>Mobile number</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.zip_code %></td>
        <td><%= supplier.state %></td>
        <td><%= supplier.country %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.telephone_no %></td>
        <td><%= supplier.mobile_number %></td>
        <td><%= supplier.comment %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path %>
