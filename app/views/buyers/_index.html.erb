<h1>Listing Buyer Bank Details</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Bank name</th>
      <th>Bank address</th>
      <th>Ifsc code</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyer_bank_details.each do |buyer_bank_detail| %>
      <tr>
        <td><%= buyer_bank_detail.bank_name %></td>
        <td><%= buyer_bank_detail.bank_address %></td>
        <td><%= buyer_bank_detail.ifsc_code %></td>
        <td><%= buyer_bank_detail.note %></td>
        <td><%= link_to 'Show', buyer_bank_detail %></td>
        <td><%= link_to 'Edit', edit_buyer_bank_detail_path(buyer_bank_detail) %></td>
        <td><%= link_to 'Destroy', buyer_bank_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

