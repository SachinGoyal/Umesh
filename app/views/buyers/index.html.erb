<h1>Listing buyers</h1>
<%= search_form_for @search, url: search_buyers_path, method: :post do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
  <div class="field">
    Sort:
    <%= f.sort_fields do |s| %>
      <%= s.sort_select %>
    <% end %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company name</th>
      <th>Address</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Country</th>
      <th>Email</th>
      <th>Telephone no</th>
      <th>Mobile number</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.company_name %></td>
        <td><%= buyer.address %></td>
        <td><%= buyer.zip_code %></td>
        <td><%= buyer.state %></td>
        <td><%= buyer.country %></td>
        <td><%= buyer.email %></td>
        <td><%= buyer.telephone_no %></td>
        <td><%= buyer.mobile_number %></td>
        <td><%= buyer.comment %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Buyer', new_buyer_path %>
